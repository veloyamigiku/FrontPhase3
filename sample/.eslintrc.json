{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            // 0(ルール無効)、1(ルール有効_警告) 、2(ルール有効_エラー)
            1,
            "always"
        ],
        "indent": [
            1,
            // インデントのスペース数。
            4
        ],
        // 関数名と引数の間のスペースを許容しない。
        "space-before-function-paren": [
            1,
            "never"
        ]
    }
}